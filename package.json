{
  "scripts": {
    "fix": "npm run lint && npm run format",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "type:check": "tsc",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "start": "wrangler dev --env local --live-reload src/server.ts",
    "dev": "npm run start",
    "deploy": "wrangler deploy --env dev src/server.ts",
    "undeploy": "wrangler delete --env dev src/server.ts",
    "test": "npm run unit && npm run integration",
    "unit": "cross-env-shell NO_LOGS=true jest --group=unit",
    "integration": "cross-env-shell NO_LOGS=true jest --group=integration --maxWorkers=1"
  },
  "dependencies": {
    "hono": "^4.2.3",
    "pino": "^8.20.0",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240403.0",
    "@jest/globals": "^29.3.1",
    "@types/aws-lambda": "^8.10.106",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.7.20",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.18",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.24.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.12.0",
    "jest": "^29.3.1",
    "jest-runner-groups": "^2.2.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.8.3",
    "wrangler": "^3.47.0"
  }
}
